                    <export translate="label">
                        <label>Download log</label>
                        <sort_order>260</sort_order>
                        <type>button</type>
                        <show_in_default>1</show_in_default>
                        <show_in_website>1</show_in_website>
                        <show_in_store>1</show_in_store>
                        <frontend_model>amzpay/adminhtml_system_config_logbutton</frontend_model>
                        <comment>Amazon log would be written to 'var/log/ directory with prefix "amazon-".
                        If Magento log is enabled then log written or download otherwise not written or download.</comment>
                        <depends><write_log>1</write_log></depends>
                    </export>
                </fields>
