                    <enable_cron translate="label">
                        <label>Enable Cron</label>
                        <frontend_type>select</frontend_type>
                        <source_model>adminhtml/system_config_source_yesno</source_model>
                        <sort_order>140</sort_order>
                        <show_in_default>1</show_in_default>
                        <show_in_website>1</show_in_website>
                        <show_in_store>1</show_in_store>
                        <depends><active>1</active></depends>
                    </enable_cron>
                    <cron_time translate="label">
                        <label>Cron Processing Time (in minutes)</label>
                        <frontend_type>text</frontend_type>
                        <validate>required-entry  validate-number validate-digits validate-digits-range digits-range-1-99999</validate>
                        <sort_order>145</sort_order>
                        <show_in_default>1</show_in_default>
                        <show_in_website>1</show_in_website>
                        <show_in_store>1</show_in_store>
                        <comment>In minutes </comment>
                        <depends><enable_cron>1</enable_cron></depends>
                    </cron_time>
                    <write_log translate="label">
                        <label>Enable logging</label>
                        <frontend_type>select</frontend_type>
                        <source_model>adminhtml/system_config_source_yesno</source_model>
                        <sort_order>150</sort_order>
                        <show_in_default>1</show_in_default>
                        <show_in_website>1</show_in_website>
                        <show_in_store>1</show_in_store>
                        <depends><active>1</active></depends>
                    </write_log>
                    <ipn_haldler translate="label">
                        <label>IPN handler url</label>
                        <frontend_model>amzpay/adminhtml_system_config_form_field_disable</frontend_model>
                        <attribute type="disabled">1</attribute>
                        <attribute type="value">1</attribute>
                        <validate>required-entry</validate>
                        <sort_order>180</sort_order>
                        <show_in_default>1</show_in_default>
                        <show_in_website>1</show_in_website>
                        <show_in_store>1</show_in_store>
                    </ipn_haldler>
                    <whitelist_url translate="label">
