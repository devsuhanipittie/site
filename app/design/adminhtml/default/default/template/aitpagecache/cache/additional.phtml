        <tr>
            <td class="scope-label">
                <button onclick="setLocation('<?php echo $this->getWarmupStartUrl() ?>')" type="button" class="scalable"><span><?php echo $this->__('Re-start Warm-Up Cache') ?></span></button>
            </td>
        </tr>
    <?php endif; ?>
    <tr>
        <td colspan=2  class="scope-label">
            <?php echo $this->__('Click to launch Cache Warm-up process which caches pages by cron based on URL Rewrites table.') ?>
