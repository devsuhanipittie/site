<?php $status = $this->getStatus() ?>
<table class="form-list">
    <tr>
        <td class="scope-label" style="width:176px">
            <?php if ($status==Aitoc_Aitpagecache_Model_Warmup::STATUS_NOT_CACHED): ?>
                <button onclick="setLocation('<?php echo $this->getWarmupStartUrl() ?>')" type="button" class="scalable"><span><?php echo $this->__('Start Warm-Up Cache') ?></span></button>
            <?php elseif ($status==Aitoc_Aitpagecache_Model_Warmup::STATUS_IN_PROGRESS): ?>
                <button onclick="setLocation('<?php echo $this->getWarmupStopUrl() ?>')" type="button" class="scalable"><span><?php echo $this->__('Pause Warm-Up Cache') ?></span></button>
            <?php elseif ($status==Aitoc_Aitpagecache_Model_Warmup::STATUS_STOPPED): ?>
                <button onclick="setLocation('<?php echo $this->getWarmupContinueUrl() ?>')" type="button" class="scalable"><span><?php echo $this->__('Continue Warm-Up Cache') ?></span></button>
